<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <runLineMarkerContributor
                language="Story"
                implementationClass="se.fortnox.intellij.jbehave.SingleScenarioRunLineMarkerProvider"
        />
        <toolWindow
                id="JBehave"
                secondary="false"
                icon="AllIcons.Modules.TestResourcesRoot"
                anchor="bottom"
                factoryClass="se.fortnox.intellij.jbehave.ui.storyexplorer.StoryExplorerToolWindowFactory"
        />
    </extensions>

    <actions>
        <action
                id="se.fortnox.intellij.jbehave.ui.storyexplorer.actions.RunSelectedNodeAction"
                class="se.fortnox.intellij.jbehave.ui.storyexplorer.actions.RunSelectedNodeAction"
                text="Run Selection"
                icon="AllIcons.Actions.Execute"
                description="Run the selected item"
        />
        <action
                id="se.fortnox.intellij.jbehave.ui.storyexplorer.actions.DebugSelectedNodeAction"
                class="se.fortnox.intellij.jbehave.ui.storyexplorer.actions.DebugSelectedNodeAction"
                text="Debug Selection"
                icon="AllIcons.Actions.StartDebugger"
                description="Debug the selected item"
        />
        <group>
            <add-to-group group-id="DebugSingleScenario_GoToStoryClassGroup" anchor="last" />
            <action
                    id="se.fortnox.intellij.jbehave.ui.storyexplorer.actions.ShowInStoryExplorerAction"
                    class="se.fortnox.intellij.jbehave.ui.storyexplorer.actions.ShowInStoryExplorerAction"
                    text="Show in Story Explorer"
                    description="Show in story explorer"
                    icon="AllIcons.General.Locate"
            />
        </group>
    </actions>
</idea-plugin>
